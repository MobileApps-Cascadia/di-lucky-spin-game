@model LuckySpin.Models.Spin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject LuckySpin.Services.ITextTransform TTransform
@{
    Layout = "_Layout";
    string Display = Model.IsWinning ? "display:block" : "display : none";
}
<h1>Lucky Spin</h1>
<button onclick='history.go(0)'>Spin</button> <div>@Model.Numbers[0]</div><div>@Model.Numbers[1]</div><div>@Model.Numbers[2]</div>
<span style="@Display">
    <h2>Congratulations, @Model.Player.FirstName<br/>You Win with Lucky @TTransform.numberToText(Model.Player.Luck)!</h2>
    <img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" />
</span>
<hr/>
<!-- A link to Review the Spins -->
<a asp-controller="Spinner" asp-action="LuckList">see your Luck List</a>